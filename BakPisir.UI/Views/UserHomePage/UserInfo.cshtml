@model BakPisir.DTO.Dtos.UserDto


<div class="col-md">
    <div class="card mb-3">
        <div class="row g-0" style="height:100px">
            <div class="col-md-2">

                <img id="image_upload_preview" src="http://localhost:44355/Uploads/UserProfile/@Model.profilePictureUrl" alt="profile_picture" width="80" height="80" style=" border-radius:50%; margin:15px; margin-top:10px" />

            </div>
            <div class="col-md-8">
                <div class="card-body" style="font-family:'Times New Roman', Times, serif ; font-size:large ;margin-top:-3px; margin-left:-70px;">
                    <b>@Model.name &nbsp; @Model.surname </b>  <br />
                    <b>@Model.username </b>
                </div>
            </div>
        </div>
    </div>
</div>
